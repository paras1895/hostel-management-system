generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Block {
  id       Int       @id @default(autoincrement())
  name     String
  rooms    Room[]
  warden   Warden[]
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Room {
  id          Int          @id @default(autoincrement())
  roomNumber  String
  capacity    Int          @default(4)
  blockId     Int
  block       Block        @relation(fields: [blockId], references: [id])
  students    Student[]
  invites     RoomInvite[]
  groupGender Gender?
  groupYear   YearEnum?
}

enum YearEnum {
  FY
  SY
  TY
  BE
}

model Student {
  id          Int       @id @default(autoincrement())
  mis         Int       @unique
  name        String
  email       String    @unique
  year        YearEnum
  gender      Gender    @default(OTHER)
  cgpa        Float
  preference  String?
  roomId      Int?
  room        Room?     @relation(fields: [roomId], references: [id])
  complaints  Complaint[]
  payments    Payment[]
  messId      Int?
  mess        Mess?     @relation(fields: [messId], references: [id])
  user        User?     @relation("StudentUser")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  sentInvites     RoomInvite[] @relation("FromStudentInvites")
  receivedInvites RoomInvite[] @relation("ToStudentInvites")
  verified    Boolean   @default(false)
}

model Complaint {
  id         Int       @id @default(autoincrement())
  studentId  Int
  student    Student   @relation(fields: [studentId], references: [id])
  message    String
  status     String    @default("Pending")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Warden {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  phone     String?
  blockId   Int?
  block     Block?    @relation(fields: [blockId], references: [id])
  user      User?     @relation("WardenUser")
}

model Payment {
  id         Int       @id @default(autoincrement())
  studentId  Int
  student    Student   @relation(fields: [studentId], references: [id])
  amount     Float
  status     String    @default("Pending")
  dueDate    DateTime
  paidAt     DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Mess {
  id        Int       @id @default(autoincrement())
  name      String
  capacity  Int
  menu      String?
  students  Student[]
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String    @default("student")
  studentId Int?      @unique
  student   Student?  @relation("StudentUser", fields: [studentId], references: [id])
  wardenId  Int?      @unique
  warden    Warden?   @relation("WardenUser", fields: [wardenId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

model RoomInvite {
  id            Int           @id @default(autoincrement())
  fromStudentId Int
  toStudentId   Int
  roomId        Int           // inviterâ€™s current (temporary) room
  status        InviteStatus  @default(PENDING)
  createdAt     DateTime      @default(now())
  respondedAt   DateTime?

  fromStudent   Student       @relation("FromStudentInvites", fields: [fromStudentId], references: [id])
  toStudent     Student       @relation("ToStudentInvites", fields: [toStudentId], references: [id])
  room          Room          @relation(fields: [roomId], references: [id])

  @@unique([toStudentId, roomId, status], map: "one_pending_per_room_target")
}
